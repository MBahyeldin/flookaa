auth_enabled: false

server:
  http_listen_port: 3100

ingester:
  lifecycler:
    address: 127.0.0.1
    ring:
      kvstore:
        store: inmemory
      replication_factor: 1
  chunk_idle_period: 5m
  chunk_retain_period: 30s

common:
  path_prefix: /home/loki
  replication_factor: 1

schema_config:
  configs:
    - from: 2024-01-01
      store: tsdb
      object_store: filesystem
      schema: v13
      index:
        prefix: index_
        period: 24h


storage_config:
  boltdb:
    directory: /home/loki/index
  filesystem:
    directory: /home/loki/chunks

limits_config:
  reject_old_samples: true
  reject_old_samples_max_age: 168h
